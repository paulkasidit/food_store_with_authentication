<h1>Add a New Review:</h1>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :review %>
  <%= f.text_area :content_body %>
  <%= f.label :rating %>
  <%= f.text_area :rating %>
  <p><%= f.submit %></p>
<% end %>

<% if @review.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>